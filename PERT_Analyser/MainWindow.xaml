<Window x:Class="PERT_Analyser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PERT_Analyser"
        mc:Ignorable="d"
        Title="PERT Analysis" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label>"Task Name"</Label>
                <TextBox Name="TaskName" Width="200" Margin="10" />
                <!--PlaceholderText="Task Name"-->
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label>"Duration (e.g., '5 days' or '8 hrs')"</Label>
                <TextBox Name="TaskDuration" Width="200" Margin="10" />
                <!--PlaceholderText="Duration (e.g., '5 days' or '8 hrs')"-->
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label>"Previous Tasks (comma-separated)"</Label>
                <TextBox Name="PreviousTasks" Width="200" Margin="10" />
                <!--PlaceholderText="Previous Tasks (comma-separated)"-->
            </StackPanel>
            <Button Content="Add Task" Width="100" Margin="10" Click="AddTask_Click"/>
            <Button Content="Calculate PERT" Width="150" Margin="10" Click="CalculatePERT_Click"/>
            <ListBox Name="Results" Width="400" Height="200" Margin="10"/>

        </StackPanel>
    </Grid>
</Window>
